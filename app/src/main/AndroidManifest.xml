<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="videoeditor.picsart.com.videoeditor" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Illusion" >
        <activity
            android:theme="@style/Illusion.NoActionBar"
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label=" "
            android:name=".clipart.ClipartActivity"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".EditVideoActivity"
            android:label=" " >
        </activity>
        <activity
            android:name=".TextArtActivity"
            android:label=" " >
        </activity>
        <activity
            android:name=".VideoEffectsActivity"
            android:label=" " >
        </activity>
    </application>

</manifest>
