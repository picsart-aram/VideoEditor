<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="videoeditor.picsart.com.videoeditor" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:label=" "
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Illusion" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/Illusion.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".clipart.ClipartActivity"
            android:hardwareAccelerated="true" />
        <activity
            android:theme="@style/Illusion"
            android:name=".EditVideoActivity">
        </activity>
        <activity
            android:name=".TextArtActivity">
        </activity>
        <activity
            android:name=".VideoEffectsActivity" >
        </activity>
    </application>

</manifest>
