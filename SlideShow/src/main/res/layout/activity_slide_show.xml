<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_slide_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_height"
        android:layout_below="@+id/current_image"
        android:layout_marginTop="5dp"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button

            android:id="@+id/open_pics_art_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="PAGallery"
            android:textColor="#0192E6" />

        <Button
            android:id="@+id/open_gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="15dp"
            android:text="Gallery"
            android:textColor="#0192E6" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="15dp"
            android:text="Play"
            android:textColor="#0192E6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="dur : 500 mls" />

        <SeekBar
            android:id="@+id/duration_seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="19"
            android:layout_weight="1"
            android:padding="5dp"
            android:progress="5" />

    </LinearLayout>

</LinearLayout>

